<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:background="@drawable/background_border_black"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="10.5"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="1"
        android:id="@+id/textViewOrdinalNumbers_BorrowBook"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="wrap_content"
        android:paddingEnd="1.7dp"
        android:id="@+id/textViewBookId_BorrowBook"
        android:hint="ma sach"
        android:textSize="10sp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBookName_BorrowBook"
        android:paddingEnd="3dp"
        android:hint="Ten sach"
        android:textSize="10sp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:paddingEnd="2dp"
        android:id="@+id/textViewCategory_BorrowBook"
        android:hint="The loai"
        android:textSize="10sp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:id="@+id/textViewAuthor_BorrowBook"
        android:hint="Tac gia"
        android:textSize="10sp"/>

</LinearLayout>